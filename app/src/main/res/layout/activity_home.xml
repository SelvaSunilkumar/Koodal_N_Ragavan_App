<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer"
    tools:openDrawer="end"
    tools:context="tce.education.koodalnraghavan.home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@color/icon_background"
            android:fadingEdge="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/toolbar"
                tools:ignore="MissingConstraints">
                <Button
                    android:id="@+id/donation"
                    android:layout_width="@dimen/exo_media_button_width"
                    android:layout_height="@dimen/exo_media_button_height"
                    android:background="@drawable/dhakshana"
                    android:gravity="right"
                    android:layout_gravity="right"/>
            </androidx.appcompat.widget.Toolbar>
        </androidx.constraintlayout.widget.ConstraintLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">
            <ScrollView
                android:fadingEdge="horizontal"
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:gravity="center_horizontal"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:orientation="vertical"
                            android:layout_height="match_parent">

                            <androidx.cardview.widget.CardView
                                android:background="@drawable/borderfile"
                                app:cardBackgroundColor="@color/icon_background"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardUseCompatPadding="true"
                                app:cardCornerRadius="10dp">
                                <LinearLayout
                                    android:background="@drawable/ripple_effect"
                                    android:id="@+id/ThinamOrukural"
                                    android:clickable="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">
                                    <androidx.cardview.widget.CardView
                                        android:layout_margin="2dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        app:cardCornerRadius="10dp">
                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="120dp"
                                            android:src="@drawable/client_thinam_oru_nalvarthai"/>
                                    </androidx.cardview.widget.CardView>
                                    <TextView
                                        android:gravity="center"
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp"
                                        android:id="@+id/dhinamoru"
                                        android:text="@string/thinamorukural"
                                        android:textAlignment="center"/>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:background="@drawable/borderfile"
                                app:cardBackgroundColor="@color/icon_background"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="10dp"
                                app:cardUseCompatPadding="true">

                                <LinearLayout
                                    android:background="@drawable/ripple_effect"
                                    android:id="@+id/azhwargalinManam"
                                    android:clickable="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">
                                    <androidx.cardview.widget.CardView
                                        android:layout_margin="2dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        app:cardCornerRadius="10dp">
                                        <ImageView
                                            android:layout_marginTop="10dp"
                                            android:layout_width="wrap_content"
                                            android:layout_height="120dp"
                                            android:src="@drawable/client_alwargalin_manam"/>
                                    </androidx.cardview.widget.CardView>
                                    <TextView
                                        android:gravity="center"
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp"
                                        android:id="@+id/alvars"
                                        android:text="@string/alwargalinManam_en"
                                        android:textAlignment="center"/>
                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:background="@drawable/borderfile"
                                app:cardBackgroundColor="@color/icon_background"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardUseCompatPadding="true"
                                app:cardCornerRadius="10dp">
                                <LinearLayout
                                    android:background="@drawable/ripple_effect"
                                    android:id="@+id/KadhaiKekumNeram"
                                    android:clickable="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">
                                    <androidx.cardview.widget.CardView
                                        android:layout_margin="2dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        app:cardCornerRadius="10dp">

                                        <ImageView
                                            android:layout_marginTop="10dp"
                                            android:layout_width="wrap_content"
                                            android:layout_height="120dp"
                                            android:src="@drawable/client_kadhai_kekum_neram"/>
                                    </androidx.cardview.widget.CardView>
                                    <TextView
                                        android:gravity="center"
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp"
                                        android:id="@+id/storytime"
                                        android:text="@string/kadhai"
                                        android:textAlignment="center"/>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:background="@drawable/borderfile"
                                app:cardBackgroundColor="@color/icon_background"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="10dp"
                                app:cardUseCompatPadding="true">
                                <LinearLayout
                                    android:background="@drawable/ripple_effect"
                                    android:id="@+id/babyname"
                                    android:clickable="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">
                                    <androidx.cardview.widget.CardView
                                        android:layout_margin="2dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        app:cardCornerRadius="10dp">
                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="120dp"
                                            android:layout_marginTop="10dp"
                                            android:src="@drawable/client_baby_names" />
                                    </androidx.cardview.widget.CardView>
                                    <TextView
                                        android:gravity="center"
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp"
                                        android:id="@+id/nameBaby"
                                        android:text="@string/babyName_en"
                                        android:textAlignment="center"/>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>
                            <androidx.cardview.widget.CardView
                                android:background="@drawable/borderfile"
                                app:cardBackgroundColor="@color/icon_background"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="10dp"
                                app:cardUseCompatPadding="true">
                                <LinearLayout
                                    android:background="@drawable/ripple_effect"
                                    android:id="@+id/othersUpanyasam"
                                    android:clickable="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">
                                    <androidx.cardview.widget.CardView
                                        android:layout_margin="2dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        app:cardCornerRadius="10dp">
                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="120dp"
                                            android:layout_marginTop="10dp"
                                            android:src="@drawable/others_and_upanyasam" />
                                    </androidx.cardview.widget.CardView>
                                    <TextView
                                        android:gravity="center"
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp"
                                        android:id="@+id/othersUpanyasamText"
                                        android:text="@string/other_en"
                                        android:textAlignment="center"/>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                        <LinearLayout
                            android:gravity="center_horizontal"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:orientation="vertical"
                            android:layout_height="match_parent">

                            <androidx.cardview.widget.CardView
                                android:background="@drawable/borderfile"
                                app:cardBackgroundColor="@color/icon_background"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardUseCompatPadding="true"
                                app:cardCornerRadius="10dp">
                                <LinearLayout
                                    android:background="@drawable/ripple_effect"
                                    android:clickable="true"
                                    android:id="@+id/Jodhidam"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">
                                    <androidx.cardview.widget.CardView
                                        android:layout_margin="2dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        app:cardCornerRadius="10dp">
                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="120dp"
                                            android:src="@drawable/client_jodhidam"/>
                                    </androidx.cardview.widget.CardView>
                                    <TextView
                                        android:gravity="center"
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp"
                                        android:id="@+id/astrology"
                                        android:text="@string/jodhidam_en"
                                        android:textAlignment="center"/>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:background="@drawable/borderfile"
                                app:cardBackgroundColor="@color/icon_background"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="10dp"
                                app:cardUseCompatPadding="true">
                                <LinearLayout
                                    android:background="@drawable/ripple_effect"
                                    android:clickable="true"
                                    android:id="@+id/ebooks"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">
                                    <androidx.cardview.widget.CardView
                                        android:layout_margin="2dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        app:cardCornerRadius="10dp">
                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="120dp"
                                            android:layout_marginTop="10dp"
                                            android:src="@drawable/client_ebooks" />
                                    </androidx.cardview.widget.CardView>
                                    <TextView
                                        android:id="@+id/books"
                                        android:gravity="center"
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp"
                                        android:textAlignment="center"
                                        android:text="@string/ebooks_en"/>

                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:background="@drawable/borderfile"
                                app:cardBackgroundColor="@color/icon_background"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="10dp"
                                app:cardUseCompatPadding="true">
                                <LinearLayout
                                    android:background="@drawable/ripple_effect"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:clickable="true"
                                    android:id="@+id/thinahiriyai">
                                    <androidx.cardview.widget.CardView
                                        android:layout_margin="2dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        app:cardCornerRadius="10dp">
                                        <ImageView
                                            android:layout_marginTop="10dp"
                                            android:layout_width="wrap_content"
                                            android:layout_height="120dp"
                                            android:src="@drawable/client_dhinacharyai"/>
                                    </androidx.cardview.widget.CardView>
                                    <TextView
                                        android:gravity="center"
                                        android:id="@+id/routine"
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp"
                                        android:text="@string/thinachariyai"
                                        android:textAlignment="center"/>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:background="@drawable/borderfile"
                                app:cardBackgroundColor="@color/icon_background"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardUseCompatPadding="true"
                                app:cardCornerRadius="10dp">
                                <LinearLayout
                                    android:background="@drawable/ripple_effect"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:id="@+id/dance"
                                    android:clickable="true">
                                    <androidx.cardview.widget.CardView
                                        android:layout_margin="2dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        app:cardCornerRadius="10dp">
                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="120dp"
                                            android:layout_marginTop="10dp"
                                            android:src="@drawable/client_dance"/>
                                    </androidx.cardview.widget.CardView>
                                    <TextView
                                        android:id="@+id/danceId"
                                        android:gravity="center"
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp"
                                        android:textAlignment="center"
                                        android:text="@string/dance_en"/>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:background="@drawable/borderfile"
                                app:cardBackgroundColor="@color/icon_background"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardUseCompatPadding="true"
                                app:cardCornerRadius="10dp">
                                <LinearLayout
                                    android:background="@drawable/ripple_effect"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:id="@+id/prasadham"
                                    android:clickable="true">
                                    <androidx.cardview.widget.CardView
                                        android:layout_margin="2dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        app:cardCornerRadius="10dp">
                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="120dp"
                                            android:layout_marginTop="10dp"
                                            android:src="@drawable/prasadham_icon"/>
                                    </androidx.cardview.widget.CardView>
                                    <TextView
                                        android:id="@+id/prasadhamId"
                                        android:gravity="center"
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp"
                                        android:textAlignment="center"
                                        android:text="@string/prasadham_en"/>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>

            </ScrollView>

        </LinearLayout>
    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/navigationbar"
        app:menu="@menu/menu_item"
        android:layout_gravity="start"
        app:headerLayout="@layout/header">
    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>